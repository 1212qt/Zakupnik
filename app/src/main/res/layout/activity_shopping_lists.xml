<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:id="@+id/activity_shopping_lists_tv_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="32sp"
        android:text="@string/activity_shopping_lists_tv_header_text" />

    <ExpandableListView
        android:id="@+id/activity_shopping_lists_elv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_shopping_lists_tv_header" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_shopping_lists_fab_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="30dp"

        android:clickable="true"
        app:backgroundTint="@color/white"
        app:maxImageSize="64dp"
        app:srcCompat="@drawable/ic_green_add_btn" />
</RelativeLayout>